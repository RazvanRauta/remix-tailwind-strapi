{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "dev": "concurrently 'yarn:dev-*'",
    "dev-css": "yarn css:build --watch",
    "dev-remix": "remix dev",
    "css:build": "postcss styles/**/*.css --dir app/styles",
    "css:prod": "yarn css:build --env production",
    "postinstall": "remix setup node",
    "build": "yarn css:prod && remix build",
    "prebuild": "rimraf ./public/build \"./app/styles/**/*.css\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@remix-run/react": "^1.0.6",
    "@remix-run/serve": "^1.0.6",
    "@remix-run/vercel": "^1.0.6",
    "consola": "^2.15.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.6"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.6",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/lodash": "^4.14.178",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/tailwindcss": "^2.2.4",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "cssnano": "^5.0.13",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.1",
    "tailwind-scrollbar-hide": "^1.1.6",
    "tailwindcss": "^3.0.5",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "app/**/*.{js,jsx,ts,tsx,}": [
      "eslint --max-warnings=0",
      "prettier --config .prettierrc.js --ignore-path .prettierignore -w"
    ],
    "app/**/*.{json,css,scss,md}": [
      "prettier --config .prettierrc.js --ignore-path .prettierignore -w"
    ]
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}